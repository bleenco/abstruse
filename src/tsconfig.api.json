{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/api",
    "baseUrl": "./api",
    "module": "commonjs",
    "target": "es2015",
    "sourceMap": false,
    "declaration": false,
    "types": ["node", "bookshelf"]
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 1
  },
  "files": [
    "api/index.ts"
  ],
  "include": [
    "api/**/*.ts"
  ],
  "exclude": [
    "main.ts",
    "polyfills.ts",
    "test.ts",
    "app/",
    "environments/",
    "testing/"
  ]
}
