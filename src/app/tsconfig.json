{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2015",
    "noImplicitAny": false,
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2016",
      "dom"
    ],
    "outDir": "lib",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": ["node"]
  },
  "exclude": [
    "**/*.spec.ts",
    "testing/**/*"
  ],
  "paths": {
    "@angular/*": ["../node_modules/@angular/*"]
  },
  "angularCompilerOptions": {
    "genDir": "./ngfactory",
    "entryModule": "./app.module#AppModule"
  },
  "awesomeTypescriptLoaderOptions": {
    "silent": true
  }
}
