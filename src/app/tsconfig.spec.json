{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2016",
      "dom"
    ],
    "outDir": "lib",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "jasmine",
      "node"
    ]
  },
  "exclude": [
    "main.aot.ts"
  ],
  "paths": {
    "@angular/*": ["../node_modules/@angular/*"]
  },
  "angularCompilerOptions": {
    "genDir": "ngfactory",
    "entryModule": "./app.module#AppModule"
  },
  "awesomeTypescriptLoaderOptions": {
    "silent": true
  }
}
